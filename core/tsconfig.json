{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
, "src/components/Button/index.vue"    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}